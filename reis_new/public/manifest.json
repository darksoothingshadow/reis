{
    "manifest_version": 3,
    "name": "reIS",
    "version": "2.0.0",
    "description": "Modernized reIS extension for IS Mendelu",
    "permissions": [
        "storage",
        "identity",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "oauth2": {
        "client_id": "576873601004-apldk3o75gacgqqr8la5mtodaj5ngrsa.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive.file"
        ]
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self'; style-src 'self'"
    },
    "host_permissions": [
        "https://is.mendelu.cz/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://is.mendelu.cz/auth/",
                "https://is.mendelu.cz/auth/?*",
                "https://is.mendelu.cz/auth/index.pl*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "mendelu_logo_16.png",
                "mendelu_logo_48.png",
                "mendelu_logo_128.png",
                "google_drive_logo.svg",
                "drive_icon.svg",
                "fonts/*"
            ],
            "matches": [
                "https://is.mendelu.cz/*"
            ]
        }
    ],
    "icons": {
        "16": "mendelu_logo_16.png",
        "48": "mendelu_logo_48.png",
        "128": "mendelu_logo_128.png"
    }
}